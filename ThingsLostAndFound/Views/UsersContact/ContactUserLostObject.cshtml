
@{
    ViewBag.Title = "ContactUserLostObject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    int id = ViewBag.idObject;
}
<html>
<body>
    <h2>Send a Message to user</h2>
    <p>
        Message to <b>@ViewBag.userName</b>
    <p>
        Object: <b>@ViewBag.titleObject</b>
    <p>
        <form id="formMessage" action="/UsersContact/SendRequestUser2" method="post">
            <table>
                <tr>
                    <td>
                        @Html.Hidden("id", id)
                        Please, write your message<p></p>
                        <textarea id="textMessage" class="text" cols="46" rows="10" name="TextMessage"></textarea>
                    </td>
                </tr>
                <tr>
                    <td>
                        <p>As you aren´t an register user, you have to write your contact email. Are you Okay with this? <input id="emailCheckUserLostObject" type="checkbox" required name="emailCheckUserLostObject" value="checked"></p>
                        Please, write your email address <input id="emailUserFoundObject" class="text" type="email" required name="emailUserFoundObject">
                        <p></p>
                    </td>
                </tr>
                <tr>
                    <td>
                        <input id="submit" type="submit" value="Send Request" class="btn btn-success" />
                    </td>
                </tr>
            </table>
    </form>

</body>
</html>
